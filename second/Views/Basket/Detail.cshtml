@model IEnumerable< second.Domain.ViewModels.OrderViewModel>
@{
    Layout = "_Layout";
}


<div class="container-fluid">
    <div class="row">
        <h1>Ваша корзина</h1>
        @if (Model.Count() == 0)
        {
            <h1>Корзина пуста</h1>
        }
        else
        {
            <table>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Img</th>
                    <th scope="col">Имя</th>
                    <th scope="col">Модель</th>
                    <th scope="col">Тип</th>
                    <th scope="col">Скорость</th>

                </tr>
            @foreach (OrderViewModel o in Model){
                    <tr>
                        <td>@o.Id</td>
                        <td>

<img src="https://epicagroup.ru/assets/components/system_catalog/admin_panel/img/1dd7a9247e23850cf6e3e2ed25e5539ef72bbe15.jpg" style="width: 100px;height: 100px">
                        </td>
                        <td>@o.RobotName
                        </td>
                        <td>@o.Model</td>
                        <td>@o.TypeRobot</td>
                        <td>@o.Speed</td>
                        <td>
                            <form method="post" asp-controller="Basket" asp-action="DeleteFromBasket" asp-route-id="@o.Id">
                                <input class="btn btn-primary" type="submit" value="X" />
                            </form>
                        </td>
                    </tr>
            }
           
               
            </table>
        }


    </div>
</div>