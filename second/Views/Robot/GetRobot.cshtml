@model second.Domain.Entity.Robot
@{
    Layout = "_Layout";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-6">
            <h1>@Model.Name</h1>
            <img src="https://epicagroup.ru/assets/components/system_catalog/admin_panel/img/1dd7a9247e23850cf6e3e2ed25e5539ef72bbe15.jpg" style="width: 500px;height: 500px">
        </div>
        <div class="col-4">

            <br />
            <h3>Цена: @Model.Price</h3>
            <br />
            <h3>Модель: @Model.Model</h3>
            <h3>Описание: @Model.Description</h3>
            <h3>Скорость: @Model.Speed</h3>
            <h3>Цена: @Model.Price</h3>
           
            @if (User.IsInRole("Admin")){
                <a asp-controller="Robot" asp-action="SaveRobot" asp-route-id="@Model.Id" class="btn btn-primary">Изменить</a>
                <form method="post" asp-controller="Robot" asp-action="DeleteRobot" asp-route-id="@Model.Id">
                    <input class="btn btn-primary" type="submit" value="Удалить" />
                </form>
                
            }
            <form method="post" asp-controller="Basket" asp-action="AddToBasket" asp-route-id="@Model.Id">
                <input class="btn btn-primary" type="submit" value="Добавить в корзину" />
            </form>

        </div>
    </div>


    <div>
    </div>
</div>

